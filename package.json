{
  "name": "alexa-astronomie-skill",
  "version": "1.0.0",
  "description": "Alexa Astronomie Flash Briefing Skill",
  "private": true,
  "scripts": {
    "pretest": "npm run build:prod",
    "test": "cross-env AWS_REGION=us-east-1 jest",
    "test:watch": "npm run test -- --watch",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "webpack --config webpack.config.ts --require ts-node/register",
    "build:dev": "npm run build -- --mode development --watch",
    "build:prod": "npm run lint && npm run build -- --mode production",
    "create-s3-bucket": "aws s3 ls s3://alexa-astronomie-skill > /dev/null 2>&1 || aws s3 mb s3://alexa-astronomie-skill --region eu-west-1",
    "convert-assets": "rsvg-convert -w 108 -o assets/icon108.png assets/icon.svg && rsvg-convert -w 512 -o assets/icon512.png assets/icon.svg",
    "deploy:assets": "aws s3 sync ./assets s3://alexa-astronomie-skill/ --acl public-read",
    "deploy:prod": "serverless deploy --stage production",
    "deploy:dev": "serverless deploy --stage development"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.27",
    "@types/jest": "24.0.15",
    "@types/node": "10.14.1",
    "ask-cli": "1.7.4",
    "axios": "0.19.0",
    "cheerio": "1.0.0-rc.3",
    "cross-env": "5.2.0",
    "iconv-lite": "0.4.24",
    "jest": "24.8.0",
    "serverless": "1.45.1",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2",
    "virtual-alexa": "0.7.2",
    "webpack": "4.35.0",
    "webpack-command": "0.4.2"
  }
}
